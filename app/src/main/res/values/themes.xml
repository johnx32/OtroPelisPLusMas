<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OtroPelisPlusMas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fondo2</item>
        <item name="colorPrimaryVariant">@color/texto</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/texto</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <!--<style name="progress.dark" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="actionBarItemBackground">@color/white</item>
    </style>-->

    <style name="Theme.OtroPelisPlusMas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OtroPelisPlusMas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OtroPelisPlusMas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="ThemeOverlay.OtroPelisPlusMas.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>-->

    <style name="DialogoTema" parent="Theme.AppCompat.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle.textColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle.textColor</item>
    </style>
    <style name="DialogButtonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  tema para full screen en fragment   -->
    <style name="Theme.FullScreen.Fullscreen" parent="Theme.OtroPelisPlusMas">
        <item name="android:actionBarStyle">@style/Widget.Theme.FullScreen.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="Widget.Theme.FullScreen.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>